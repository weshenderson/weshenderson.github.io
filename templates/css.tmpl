body {
  background-color: $background;
  color: $font_color;
  font-family: $font;
  margin-bottom: 0%;
  margin-left: 15%;
  margin-right: 5%;
  margin-top: 10%;
}

img {
  max-width: 100%;
  max-height: 100%;
  display: block;
}

.flex-container {
  display: flex;
}

.flex-child {
  flex: 1;
  font-size: 2em;
  text-align: center;
  border: 2px solid yellow;
}

.flex-child:first-child {
  margin-right: 20px;
  max-width: 100%;
}

a {	
  color: inherit;
  font-family: inherit;
}

a:visited {
  color: $link;
  font-family: inherit;
}

.header {
  border: none;
  font-family: inherit;
  font-size: 1em;
  left: 0;
  position: fixed;
  text-align: center;
  top: 0;
  width: 100%;
}

.footer {
  background-color: inherit;
  border: none;
  bottom: 0;
  font-family: inherit;
  font-size: 1em;
  left: 0;
  position: fixed;
  text-align: center;
  width: 100%;
}
